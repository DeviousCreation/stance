@page "/auth/request-account-verification"
@using Initium.Portal.Web.Infrastructure.Constants
@model Initium.Portal.Web.Pages.Auth.RequestAccountVerification
@{
    ViewData["Title"] = "Request Account Verification";
}
    <section id="wrapper" class="login-register login-sidebar">
        <div class="login-box card">
            <div class="card-body d-flex align-items-center justify-content-center flex-column">
                <form class="form-horizontal form-material" asp-antiforgery="true" method="post">
                    <a href="#" class="text-center d-block"><img src="~/logo.png" alt="Home" /></a>
                    <h3 class="p-2 rounded-title mt-4 mb-0">Need Verification?</h3>
                    <small>Please confirm your email address below and we will send you a verification link.</small>
                    <div class="form-group mt-4">

                        <label asp-for="PageModel.EmailAddress" class="sr-only"></label>
                        <input class="form-control" type="text" asp-for="PageModel.EmailAddress" placeholder="@Html.DisplayNameFor(x=>x.PageModel.EmailAddress)">
                        <span class="text-danger small" asp-validation-for="PageModel.EmailAddress"></span>

                    </div>
                    <div class="form-group text-center mt-3">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Continue</button>
                        </div>
                    </div>
                    <div class="d-flex no-block align-items-center">
                        <div class="ml-auto">
                            <span class="text-muted"><a href="@Url.Page(PageLocations.AuthSignIn)"><i class="fas fa-angle-double-left"></i> Return to login.</a></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>