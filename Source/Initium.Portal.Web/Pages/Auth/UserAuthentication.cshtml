@page "/auth/sign-in"
@using Initium.Portal.Web.Infrastructure.Constants
@model Initium.Portal.Web.Pages.Auth.UserAuthentication
@{
    ViewData["Title"] = "Sign In";
}

    <section id="wrapper" class="login-register login-sidebar">
        <div class="login-box card">
            <div class="card-body d-flex align-items-center justify-content-center flex-column">
                <form class="form-horizontal form-material" asp-antiforgery="true" method="post" asp-route-returnurl="@Model.ReturnUrl">
                    <a href="#" class="text-center d-block"><img src="~/logo.png" alt="Home" /></a>
                    <div class="form-group mt-4">

                        <label asp-for="PageModel.EmailAddress" class="sr-only"></label>
                        <input class="form-control" type="text" asp-for="PageModel.EmailAddress" placeholder="@Html.DisplayNameFor(x=>x.PageModel.EmailAddress)">
                        <span class="text-danger small" asp-validation-for="PageModel.EmailAddress"></span>

                    </div>
                    <div class="form-group">

                        <label asp-for="PageModel.Password" class="sr-only"></label>
                        <input class="form-control" type="password" asp-for="PageModel.Password" placeholder="@Html.DisplayNameFor(x=>x.PageModel.Password)">
                        <span class="text-danger small" asp-validation-for="PageModel.Password"></span>

                    </div>
                    <div class="d-flex no-block align-items-center">
                        <div class="ml-auto">
                            <a href="@Url.Page(CorePageLocations.AuthRequestPassword)" class="text-muted"><i class="fa fa-lock mr-1"></i> Forgot password?</a>
                        </div>
                    </div>
                    <div class="form-group text-center mt-3">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                    <div class="d-flex no-block align-items-center">
                        <div class="ml-auto">
                            <span class="text-muted">If you have not received your welcome email then click <a href="@Url.Page(CorePageLocations.AuthRequestAccountVerification)">here</a></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>