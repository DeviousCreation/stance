@addTagHelper *, GravatarHelper.AspNetCore
@model Stance.Web.Components.ProfilePanel.ProfilePanelViewModel

<div class="col-lg-4 col-xlg-3 col-md-5 pl-md-0 pr-md-2 pl-1 pr-1">
    <div class="card">
        <div class="card-body">
            <div class="m-t-30 text-center">
                <img gravatar-email="@Model.EmailAddress" gravatar-size="150" class="img-circle" width="150" alt="Profile Gravatar" />
                <h4 class="card-title m-t-10">@Model.Name</h4>
            </div>
        </div>
    </div>
</div>