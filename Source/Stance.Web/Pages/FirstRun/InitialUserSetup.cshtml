@page "/welcome/user-creation"
@model Stance.Web.Pages.FirstRun.InitialUserSetup
@{
    Layout = "_ExternalLayout";
    ViewData["Title"] = "Setup";
}

<section id="wrapper">
    <div class="login-register">
        <div class="login-box card">
            <div class="card-body">
                <form class="form-horizontal form-material" method="post">
                    <h3 class="p-2 rounded-title mb-3">Setup</h3>
                    <div class="form-group">
                        <label asp-for="PageModel.EmailAddress"></label>
                        <input class="form-control" asp-for="PageModel.EmailAddress" type="email">
                        <span class="text-danger" asp-validation-for="PageModel.EmailAddress"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PageModel.Password"></label>
                        <input class="form-control" asp-for="PageModel.Password" type="password">
                        <span class="text-danger" asp-validation-for="PageModel.Password"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PageModel.PasswordConfirmation"></label>
                        <input class="form-control" asp-for="PageModel.PasswordConfirmation" type="password">
                        <span class="text-danger" asp-validation-for="PageModel.PasswordConfirmation"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PageModel.FirstName"></label>
                        <input class="form-control" asp-for="PageModel.FirstName" type="text">
                        <span class="text-danger" asp-validation-for="PageModel.FirstName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PageModel.LastName"></label>
                        <input class="form-control" asp-for="PageModel.LastName" type="text">
                        <span class="text-danger" asp-validation-for="PageModel.LastName"></span>
                    </div>

                    <div class="form-group text-center mt-3">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Setup</button>
                        </div>
                    </div>
                </form>                
            </div>
        </div>
    </div>
</section>