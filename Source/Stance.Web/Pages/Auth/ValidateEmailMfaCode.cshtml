@page
@model Stance.Web.Pages.Auth.ValidateEmailMfaCode
@{
}

<section id="wrapper" class="login-register login-sidebar">
    <div class="login-box card">
        <div class="card-body">
            <form class="form-horizontal form-material" asp-antiforgery="true" method="post">
                <a href="#" class="text-center d-block"></a>
                <div class="form-group mt-4">

                    <label asp-for="PageModel.Code"></label>
                    <input class="form-control" type="text" asp-for="PageModel.Code">
                    <span class="text-danger" asp-validation-for="PageModel.Code"></span>

                </div>
                <div class="form-group text-center mt-3">
                    <div class="col-xs-12">
                        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Authenticate</button>
                    </div>
                </div>
            </form>
            <div class="message-box contact-box">

                <form class="message-widget contact-widget" method="post">
                    @if (Model.HasApp)
                    {

                        <button asp-page-handler="AppMfa">
                            <div class="user-img">
                                <span class="round"><i class="icon-mail"></i></span>
                            </div>
                            <div class="mail-contnet">
                                <h5>App</h5> <span class="mail-desc">&nbsp;</span>
                            </div>
                        </button>
                    }
                </form>
            </div>
        </div>
    </div>
</section>