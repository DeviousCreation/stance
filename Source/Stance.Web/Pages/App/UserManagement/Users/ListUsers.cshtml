@page "/app/user-management/users"
@using Stance.Web.Infrastructure.Constants
@model Stance.Web.Pages.App.UserManagement.Users.ListUsers
@{
    Layout = "Shared/_AppLayout";
}

    <div class="row page-titles">
        <div class="align-self-center pl-0 col-md-7 col-12">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="@PageLocations.AppDashboard">Home</a></li>
                <li class="breadcrumb-item">User Management</li>
                <li class="breadcrumb-item active">Users</li>
            </ol>
        </div>
        <div class="col-md-5 col-12 align-self-center d-flex justify-content-end pr-0 mt-2 mt-md-0">
            <a asp-page="@PageLocations.UserCreate" class="btn btn-sm float-right btn-info text-white">Create new user</a>
        </div>
    </div>

    
    <div class="row">
        <div class="col-12 pl-md-0 pr-md-0 pl-1 pr-1">
            <div class="card">
                <div class="card-body">
                    
                    <h3 class="card-title">User Management</h3>
                    <h6 class="card-subtitle" id="table-description">Create new, edit existing, or delete users</h6>
                    <div class="table-responsive">
                        <table class="table table-hover clickable" id="users" aria-describedby="table-description" data-route="@ODataLocations.UserListing" data-details="@Url.PageLink(pageName: PageLocations.UserView, values: new {id = "__ID__"})">
                            <thead>
                                <tr>
                                    <th id="email-address">Email Address</th>
                                    <th id="first-name">First Name</th>
                                    <th id="last-name">Last Name</th>
                                    <th id="locked">Locked</th>
                                    <th id="last-login">Last Login</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts
{
<script src="~/users-list.js.gz" asp-append-version="true"></script>
}
