@page "/app/user-management/roles"
@using Stance.Web.Infrastructure.Constants
@model Stance.Web.Pages.App.UserManagement.Roles.ListRoles
@{
    Layout = "Shared/_AppLayout";
}

    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Roles</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="@PageLocations.AppDashboard">Home</a></li>
                <li class="breadcrumb-item">User Management</li>
                <li class="breadcrumb-item active">Roles</li>
            </ol>
        </div>
    </div>


<div class="row">
    <div class="col-12">
        <!-- Column -->
        <div class="card">
            <div class="card-body">
                <a asp-page="@PageLocations.RoleCreate" class="btn btn-sm float-right btn-info text-white">Create new role</a>
                <h3 class="card-title">Role Management</h3>
                <h6 class="card-subtitle" id="table-description">Create new, edit existing, or delete roles</h6>
                <div class="table-responsive form-material">
                    <table class="table table-hover clickable nowrap" id="roles" cellspacing="0" width="100%" aria-describedby="table-description" data-route="@ODataLocations.RoleListing" data-details="@Url.Page(PageLocations.RoleView, new {id = "__ID__"})">
                        <thead>
                        <tr>
                            <th id="name">Name</th>
                            <th id="resource-total">Resource Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>                    
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/role-listing.js" asp-append-version="true"></script>
}
