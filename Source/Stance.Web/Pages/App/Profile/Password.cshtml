@page "/app/profile/change-password"
@using Stance.Web.Infrastructure.Constants
@model Stance.Web.Pages.App.Profile.Password
@{ this.Layout = "Shared/_AppLayout"; }

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Profile</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="@PageLocations.AppDashboard">Home</a></li>
            <li class="breadcrumb-item">Profile</li>
            <li class="breadcrumb-item active">Password</li>
        </ol>
    </div>
</div>
<div class="container-fluid">

    <div class="row">
        @await Component.InvokeAsync("ProfilePanel")
        <div class="col-lg-8 col-xlg-9 col-md-7">
            <div class="card">
                <div class="card">
                    <ul class="nav nav-tabs profile-tab" role="tablist" id="profileTabs">
                        <li class="nav-item"> <a class="nav-link" role="tab" asp-page="@PageLocations.AppProfileDetails">My Details</a> </li>
                        <li class="nav-item"> <a class="nav-link active" role="tab" asp-page="@PageLocations.ChangePassword">Password</a> </li>
                        <li class="nav-item"> <a class="nav-link" role="tab" asp-page="@PageLocations.EnrollAuthenticatorApp">Authenticator App</a> </li>
                        <li class="nav-item"> <a class="nav-link" role="tab" asp-page="@PageLocations.SecurityKeys">Security Keys</a> </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="password" role="tabpanel">
                            <div class="card-body">
                                <form method="post" class="form-horizontal form-material">
                                    <div class="form-group">
                                        <label asp-for="PageModel.OldPassword"></label>
                                        <input asp-for="PageModel.OldPassword" class="form-control form-control-line" type="password">
                                        <span class="text-danger small" asp-validation-for="PageModel.OldPassword"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PageModel.NewPassword"></label>
                                        
                                            <input asp-for="PageModel.NewPassword" class="form-control form-control-line" type="password">
                                            <span class="text-danger small" asp-validation-for="PageModel.NewPassword"></span>
                                        
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PageModel.ConfirmPassword"></label>
                                        
                                            <input asp-for="PageModel.ConfirmPassword" class="form-control form-control-line" type="password">
                                            <span class="text-danger small" asp-validation-for="PageModel.ConfirmPassword"></span>
                                        
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12 text-right">
                                            <button class="btn btn-info text-white">Update Password</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>