@page "/app/profile/my-details"
@using Stance.Web.Infrastructure.Constants
@{ this.Layout = "Shared/_AppLayout"; }
@model Stance.Web.Pages.App.Profile.Details

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Profile</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="@PageLocations.AppDashboard">Home</a></li>
            <li class="breadcrumb-item">Profile</li>
            <li class="breadcrumb-item active">My Details</li>
        </ol>
    </div>
</div>
<div class="container-fluid">

    <div class="row">
        @await Component.InvokeAsync("ProfilePanel")
        <div class="col-lg-8 col-xlg-9 col-md-7">
            <div class="card">
                <div class="card">
                    <ul class="nav nav-tabs profile-tab" role="tablist" id="profileTabs">
                        <li class="nav-item"> <a class="nav-link active" role="tab" asp-page="@PageLocations.AppProfileDetails">My Details</a> </li>
                        <li class="nav-item"> <a class="nav-link" role="tab" asp-page="@PageLocations.EnrollAuthenticatorApp">Authenticator App</a> </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="profile" role="tabpanel">
                            <div class="card-body">
                                <form class="form-horizontal form-material" method="post" asp-antiforgery="true">
                                    <div class="form-group">
                                        <label class="col-md-12" asp-for="PageModel.FirstName"></label>
                                        <div class="col-md-12">
                                            <input class="form-control form-control-line" asp-for="PageModel.FirstName">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-12" asp-for="PageModel.LastName"></label>
                                        <div class="col-md-12">
                                            <input class="form-control form-control-line" asp-for="PageModel.LastName">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button class="btn btn-info text-white">Update Profile</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
